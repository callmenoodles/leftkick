{
	"manifest_version": 3,
	"name": "Left Kick",
	"version": "0.4.0",
	"description": "Move the chat on Kick to the left or right side.",
	"homepage_url": "https://github.com/callmenoodles/movethechat",
	"developer": {
		"name": "callmenoodles",
		"url": "https://noodles.services"
	},
	"icons": {
		"48": "icons/leftkick-64.png",
		"128": "icons/leftkick-128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{b7ec307f-b892-4508-85a0-5e504e51bd73}"
		}
	},
	"web_accessible_resources": [
		{
			"resources": ["icons/swap.svg"],
			"matches": ["*://kick.com/*"]
		}
	],
	"action": {
		"default_icon": {
			"64": "icons/leftkick-64.png"
		},
		"default_title": "Left Kick",
		"default_popup": "popup/index.html",
		"default_area": "navbar"
	},
	"host_permissions": ["*://kick.com/*"],
	"permissions": ["storage"],
	"content_scripts": [
		{
			"matches": ["*://kick.com/*"],
			"js": ["scripts/kick.js"]
		}
	]
}
